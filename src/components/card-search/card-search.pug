include ../card/card
include ../dropdown-datepicker/dropdown-datepicker
include ../dropdown-counter/dropdown-counter
include ../button/button

mixin card-search(vars = {})
  -
    const {
      form = {
        action: '/mock-address/change-me',
        method: 'get',
      },
      title = '',
      dropdownDatepicker = {},
      dropdownGuests = {},
      searchRoomButton = {},
    } = vars

    const className = 'card-search'
    let classNames = `${className} js-${className}`

  +card()
    form(
      class=classNames
      action=form.action
      method=form.method
    )
      h1(class=`${className}__title`)= title
      div(class=`${className}__datepicker js-${className}__datepicker`)
        +dropdown-datepicker(dropdownDatepicker)
      div(class=`${className}__dropdown-guests js-${className}__dropdown-guests`)
        +dropdown-counter(dropdownGuests)
      div(class=`${className}__search-room-button`)
        +button(searchRoomButton)
