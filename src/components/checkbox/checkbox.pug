mixin checkbox(vars = {})
  -
    const {
      description,
      theme = 'default',
      title = '',
      checked = false,
    } = vars

    const className = 'checkbox'
    let classNames = className + ` js-${className}`

    const themeClass = {
      default: '',
      rich: ` ${className}_theme_rich`,
    }

    classNames += themeClass[theme]

  div(class=classNames)
    label(class=`${className}__body`)
      input(
        class=`${className}__checkbox-input`
        type='checkbox'
        checked=checked
      )
      span(class=`${className}__checkmark`)
      span(class=`${className}__info`)
        span(class=`${className}__title`)= title
        if description
          span(class=`${className}__description`)= description