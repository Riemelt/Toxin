include ../label/label

mixin input-field(vars)
  -
    var {label, placeholder = "", hovered, expandable, isReadonly, isMasked = false, size = "big"} = vars
    var className = "input-field"
    var classNames = className + ` js-${className} ${className}_${size}`
  if hovered
    - classNames += ` ${className}_hovered`
  if expandable
    - classNames += ` ${className}_expandable`


  div(class=classNames data-mask=isMasked)
    label(class=`${className}__label`)
      div(class=`${className}__header`)
        +label(label)
      div(class=`${className}__main-field`)
        input(class=`${className}__input js-${className}__input` type="text" placeholder=placeholder readonly=isReadonly)
        if expandable
          button(class=`${className}__expand-button`)
            span(class="material-icons") expand_more