include ../label/label

mixin input-field(vars)
  -
    var {title = "", description, placeholder = "", hovered, expandable, isReadonly} = vars
    var className = "input-field"
    var classNames = className + ` js-${className}`
  if hovered
    - classNames += ` ${className}_hovered`
  if expandable
    - classNames += ` ${className}_expandable`

  div(class=classNames)
    label(class=`${className}__label`)
      div(class=`${className}__header`)
        +label({title, description})
      div(class=`${className}__main-field`)
        input(class=`${className}__input` type="text" placeholder=placeholder readonly=isReadonly)
        if expandable
          button(class=`${className}__expand-button`)
            span(class="material-icons") expand_more