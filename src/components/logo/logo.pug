mixin logo(vars = {})
  -
    const {
      theme = 'default',
      href = '/mock-address/change-me',
    } = vars

    const className = 'logo'
    let classNames = className

    const themeClass = {
      uiKit: ` ${className}_ui-kit`,
      default: '',
    }

    const srcImages = {
      uiKit: 'logo-ui-kit.svg',
      default: 'logo.svg',
    }

    const src = srcImages[theme]

    classNames += themeClass[theme]

  a(
    class=classNames,
    href=href
  )
    img(
      class=`${className}__icon`
      alt='toxin logo'
      src=require(`./images/${src}`)
    )