mixin radio-button(vars)
  -
    const {
      title = "",
      checked = false,
      name = "",
      value = "",
    } = vars

    const className = "radio-button"
    let classNames = className + ` js-${className}`

  div(class=classNames)
    label(class=`${className}__body`)
      input(class=`${className}__radio-input`
            type="radio"
            checked=checked
            name=name
            value=value
            )
      div(class=`${className}__button`)
      span(class=`${className}__title`)= title