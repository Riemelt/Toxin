extends ../../layouts/layout-ui-kit/layout-ui-kit
include ../../components/input-field/input-field
include ../../components/dropdown-counter/dropdown-counter
include ../../components/container/container
include ../../components/label/label
include ../../components/button/button
include ../../components/control-panel/control-panel
include ../../components/datepicker/datepicker
include ../../components/dropdown-datepicker/dropdown-datepicker

block vars
  -
    var title = "Form Elements"

block content
  - 
    let className = "form-elements"
  div(class=className)
    +container
      //div(class=`${className}__input-field js-${className}__input-field`)
        +input-field({
          label: {
            title: "text field",
            description: "default",
          },
          size: "small",
          placeholder: "Email"
          })
      //div(class=`${className}__input-field js-${className}__input-field`)
        +input-field({
          label: {
            title: "masked text field"
          },
          placeholder: "ДД.ММ.ГГГГ",
          isMasked: true
          })
      div(class=`${className}__dropdown-datepicker js-${className}__dropdown-datepicker`)
        +dropdown-datepicker({
          withTwoInputs: false,
          size: "medium",
          datepicker: {
            isHidden: true,
          },
          inputs: [
            {
              label: {
                title: "filter date dropdown",
              },
              isReadonly: true,
              size: "medium",
              expandable: true,
            },
          ]})
      div(class=`${className}__dropdown-datepicker js-${className}__dropdown-datepicker`)
        +dropdown-datepicker({
          withTwoInputs: true,
          size: "big",
          datepicker: {
            isHidden: true,
            endDate: "2022-05-23",
          },
          inputs: [
            {
              label: {
                title: "date dropdown",
              },
              isReadonly: true,
              size: "small",
              expandable: true,
            },
            {
              label: {
                title: "date dropdown",
              },
              isReadonly: true,
              size: "small",
              expandable: true,
            }
          ]})
      //+input-field({label: "text field", description: "hover / focus", placeholder: "This is pretty awesome", hovered: true})
      //+input-field({label: "dropdown", placeholder: "Сколько гостей", expandable: true})
      //div(class=`${className}__dropdown-counter js-${className}__dropdown-counter`)
        +dropdown-counter({
          type: "room",
          input: {
            label: {
              title: "dropdown2",
            },
            placeholder: "Сколько комнат",
          },
          items: [
            {title: "спальни", value: 2, type: "room"},
            {title: "кровати", value: 2, type: "bed"},
            {title: "ванные комнаты", value: 1, type: "bathroom"}
          ]})
      //+input-field({title: "text field", description: "default", placeholder: "Email", expandable: true})
      //div(class=`${className}__dropdown-counter js-${className}__dropdown-counter`)
        +dropdown-counter({
          type: "guest",
          input: {
            label: {
              title: "dropdown"
            },
            placeholder: "Сколько гостей",
          },
          items: [
            {title: "взрослые", value: 0, type: "guest"},
            {title: "дети", value: 0, type: "guest"},
            {title: "младенцы", value: 0, type: "baby"}
          ]})
