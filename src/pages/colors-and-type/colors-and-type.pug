extends ../../layouts/layout-base/layout-base

include ../../components/header-ui-kit/header-ui-kit
include ../../components/color-example/color-example
include ../../components/container/container

block vars
  -
    var title = "Colors&Type"

block main
  - 
    const className = "colors-and-type"
    const data = require("./data.json")

  div(class=className)
    div(class=`${className}__header`)
      +header-ui-kit(data.header)
    +container
      div(class=`${className}__main`)
        ul(class=`${className}__color-palette`)
          each color in data.colors
            li(class=`${className}__color-palette-item`)
              +color-example(color)
        ul(class=`${className}__text-examples`)
          each text in data.texts
            li(class=`${className}__text-examples-item ${className}__text-examples-item_${text.type}`)
              if text.type === "body-sample"
                div(class=`${className}__text-examples-title`)= text.value
                div(class=`${className}__text-examples-description`)= text.description
              else
                #{text.value}(class=`${className}__text-examples-title ${className}__text-examples-title_header`)= text.value
                #{text.value}(class=`${className}__text-examples-description`)= text.description
