extends ../../layouts/layout-ui-kit/layout-ui-kit
include ../../components/color-example/color-example
include ../../components/container/container

block vars
  -
    var title = "Colors&Type"


block content
  - 
    let className = "colors-and-type"
    var colors = [
      {color: "dark-shade-100", title: "Dark Shade 100%", code: "#1F2041"},
      {color: "dark-shade-75", title: "Dark Shade 75%", code: "#1F2041"},
      {color: "dark-shade-50", title: "Dark Shade 50%", code: "#1F2041"},
      {color: "dark-shade-25", title: "Dark Shade 25%", code: "#1F2041"},
      {color: "dark-shade-5", title: "Dark Shade 5%", code: "#1F2041"},
      {color: "purple", title: "Purple", code: "#BC9CFF"},
      {color: "green", title: "Green", code: "#6FCF97"}
    ]

    var texts = [
      {type: "h1-sample", value: "h1", description: "This one is the sub-section or\nwidget title"},
      {type: "h2-sample", value: "h2", description: "Next one is the item title inside\nwidgets"},
      {type: "h3-sample", value: "h3", description: "This is a label or CTA text"},
      {type: "body-sample", value: "Body", description: "This is the body text which is used for most\nof the design, like paragraphs, lists, etc."},
    ]

  div(class=className)
    +container
      div(class=`${className}__main`)
        ul(class=`${className}__color-palette`)
          each val in colors
            li(class=`${className}__color-palette-item`)
              +color-example(val.color, val.title, val.code)
        ul(class=`${className}__text-examples`)
          each val in texts
            li(class=`${className}__text-examples-item ${className}__text-examples-item_${val.type}`)
              if val.type == "body-sample"
                div(class=`${className}__text-examples-title`)= val.value
                div(class=`${className}__text-examples-description`)= val.description
              else
                #{val.value}(class=`${className}__text-examples-title ${className}__text-examples-title_header`)= val.value
                #{val.value}(class=`${className}__text-examples-description`)= val.description
